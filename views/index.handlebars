<div class="container">

<img src="/assets/img/burger.png" alt="EatDABurger">
	<h1 id="title"> Eat-Da-Burger </h1>

 <div class="row">

 	<div class="col-lg-6">

	

	<ul>
		{{#each burgers}}

		  {{#unless devoured}}

			
		 	<li> <p class="bg-warning"> {{this.id}}.  {{this.burger_name}} </p>  <button class="devour" data-id="{{this.id}}"> Devour It! </button>   </li>

		  {{/unless}}

		{{/each}}

	</ul>
    </div>


  	<div class="col-lg-6">

	<ul>

		{{#each burgers}}

			{{#if devoured}}

				<div class="devouredBurger"> 
					<li> {{this.burger_name }} <img src="/assets/img/eaten.png" class="img-responsive" alt="Responsive image" width="50" height="50"> </li>
				</div>

			{{/if}}

		{{/each}}

	</ul>
</div>
</div>


	

	<form class="create-form">

		<div class="form-group">

			

			<textarea id="bu" name="burger" rows="5" cols="40"> </textarea>

		</div>

		<button type="submit" class="btn btn-primary btn-lg"> Submit </button>


	</form>

	<label> Enter a burger you want to eat Click the "Submit" button </label>
</div>


